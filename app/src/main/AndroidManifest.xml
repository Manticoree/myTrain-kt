<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.body.mytrain">

    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning"
        >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".mvp.gymdif.view.GymDiffActivity"
            android:screenOrientation="fullSensor"
        >

        </activity>

        <activity android:name=".mvp.trainprogram.view.TrainProgramActivity"
            android:label="@string/train_program"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="fullSensor">

        </activity>


        <activity android:name=".mvp.developwork.view.DevelopWorkActivity"
            android:screenOrientation="fullSensor">

        </activity>

        <activity android:name=".mvp.trainstreetprogram.view.TrainStreetProgramActivity"
            android:screenOrientation="fullSensor">

        </activity>

        <activity android:name=".mvp.trainhomeprogram.view.TrainHomeActivity"
            android:screenOrientation="fullSensor">

        </activity>

        <activity android:name=".mvp.trainjogprogram.view.TrainJogProgramActivity"
            android:screenOrientation="fullSensor">

        </activity>
    </application>

</manifest>